@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User Account";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="confirmation">
        <h4>Are you sure you want to delete this account?</h4>

        <input type="submit" value="Delete" class="btn btn-primary" /> @Html.ActionLink("Cancel", "Index")
    </div>
}

<div class="chit-chat-layer1">
    <div class="col-md-12 chit-chat-layer1-left">
        <div class="work-progres">
            <div class="table-responsive">
                <table class="table no-lines">
                    <tbody>
                        <tr>
                            <td>Username</td>
                            <td>@Html.DisplayFor(model => model.UserName)</td>
                        </tr>
                        <tr>
                            <td>Roles</td>
                            @if (ViewBag.RoleNames.Count == 0)
                            {
                                <td>This user is not in any roles</td>
                            }
                            else
                            {
                                <td>
                                    @foreach (var item in ViewBag.RoleNames)
                                    {
                                        @item <br />
                                    }
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="clearfix"></div>
        <br />
        @Html.ActionLink("Back to Users", "Index")
    </div>
</div>
