@model TST.DATA.EF.TSTProjectCategory

@{
    ViewBag.Title = "Delete Category";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="confirmation">
        <h4>Are you sure you want to delete this item?</h4>

        <input type="submit" value="Delete" class="btn btn-primary" /> @Html.ActionLink("Cancel", "Index")
    </div>
}

<div class="price-block-main">
    <div class="price-tables">
        <div class="col-md-4 price-grid">
            <div class="price-block">
                <div class="price-gd-top pric-clr1">
                    <h4>@Html.DisplayFor(modelItem => Model.Name)</h4>
                    <h3>
                        @Model.TSTProjects.Count()
                        @if (Model.TSTProjects.Count() == 1)
                        {
                            <span class="per-month">Project</span>
                        }
                        else
                        {
                            <span class="per-month">Projects</span>
                        }
                    </h3>
                    <h5>@Html.DisplayFor(modelItem => Model.Description)</h5>
                </div>
                <div class="price-selet pric-clr1">
                    <a href="@Url.Action("Index", "Projects", new { @cat = Model.ProjectCategoryID })">View Projects</a>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
