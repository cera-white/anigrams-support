@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "Create Role";
}

<div class="pro-head">
    <h2>Create Role</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="chit-chat-layer1">
        <div class="col-md-12 chit-chat-layer1-left">
            <div class="work-progres">
                <div class="table-responsive">
                    <table class="table no-lines">
                        <tbody>
                            <tr>
                                <td>Role Name</td>
                                <td>@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessageFor(model => model.Name)</td>
                            </tr>
                        </tbody>
                    </table>
                    <input type="submit" value="Save and Submit" class="btn btn-primary" />
                </div>
            </div>
            <div class="clearfix"></div>
            <br />
            @Html.ActionLink("Back to Roles", "Index")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}