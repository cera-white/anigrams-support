@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="confirmation">
        <h4>Are you sure you want to delete this role?</h4>

        <input type="submit" value="Delete" class="btn btn-primary" /> @Html.ActionLink("Cancel", "Index")
    </div>
}

<div class="chit-chat-layer1">
    <div class="col-md-12 chit-chat-layer1-left">
        <div class="work-progres">
            <div class="table-responsive">
                <table class="table no-lines">
                    <tbody>
                        <tr>
                            <td>Role</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                        <tr>
                            <td>Users in Role</td>
                            @if (ViewBag.Users.Count == 0)
                            {
                                <td>There are no users in this role</td>
                            }
                            else
                            {
                                <td>
                                    @foreach (var item in ViewBag.Users)
                                    {
                                        @item.UserName <br />
                                    }
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="clearfix"></div>
        <br />
        @Html.ActionLink("Back to Roles", "Index")
    </div>
</div>
