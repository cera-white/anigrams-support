@model TST.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Thank You";
}

<div class="inbox">
    <h2>Thank You, @Html.DisplayFor(model => model.Name)</h2>

    <div class="col-md-12 compose-right">
        <div class="inbox-details-default">
            @*<div class="inbox-details-heading">
                    Compose New Message
                </div>*@
            <div class="inbox-details-body">
                <div class="alert alert-info">
                    Your message has been sent! Review the details below.
                </div>

                <p>The following message was sent to Anigrams on @Html.DisplayFor(model => model.DateSent):</p>
                <p>"@Html.DisplayFor(model => model.Message)"</p>

                <br /><br />
                <a href="@Url.Action("Contact", "Home")">Return to Contact</a>
            </div>
        </div>
    </div>

    <div class="clearfix"> </div>
</div>


