@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Create User Account";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("FirstName", "New")
    @Html.Hidden("LastName", "User")
    @Html.Hidden("IsTester", false)

    <div class="buttons-main">
        <div class="progressbar-heading btn-main-heading">
            <h2>Create User Account</h2>
        </div>
        <div class="btn-effcts panel-widget inbox-details-body compose-right">
            @Html.ValidationSummary("", new { @class = "text-error" })
            <div class="table-responsive">
                <table class="table no-lines">
                    <tbody>
                        <tr>
                            <td>Email</td>
                            <td>@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Password</td>
                            <td>@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Confirm Password</td>
                            <td>@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Select Role(s)</td>
                            <td>
                                @foreach (var item in (SelectList)ViewBag.RoleId)
                                {
                                    <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                                    @Html.Label(item.Value, new { @class = "control-label" })
                                    <br />
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
                </div>
                <input type="submit" value="Save and Submit" class="btn btn-primary" />

                <div class="clearfix"></div>
            </div>

        <br />
        <a href="@Url.Action("Index", "UsersAdmin")">Back to Users</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

